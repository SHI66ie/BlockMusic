# Private key of the deployer account (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Alchemy RPC URL for Base Sepolia
ALCHEMY_BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# BaseScan API key for contract verification
BASESCAN_API_KEY=your_basescan_api_key

# Etherscan API key (can be the same as BaseScan if using the same key)
ETHERSCAN_API_KEY=your_etherscan_api_key

# Contract addresses (will be filled after deployment)
SUBSCRIPTION_CONTRACT=
USDC_CONTRACT=0x036CbD53842c5426634e7929541eC2318f3dCF7e  # Base Sepolia USDC

# Frontend environment variables
NEXT_PUBLIC_SUBSCRIPTION_CONTRACT=
NEXT_PUBLIC_USDC_CONTRACT=0x036CbD53842c5426634e7929541eC2318f3dCF7e
NEXT_PUBLIC_CHAIN_ID=84532  # Base Sepolia chain ID
